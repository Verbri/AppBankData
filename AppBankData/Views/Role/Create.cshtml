@model AppBankData.Models.Role

<div class="row">
    <div class="col-12">
        <div class="card m-0">
            <div class="card-header">
                <div class="row">
                    <div class="col-9">
                        <h4><b>TAMBAH DATA ROLE</b></h4>
                    </div>
                </div>
            </div>
            <div class="card-body ">
                <form id="CreateRoleForm" action="@Url.Action("Create", "Role")" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Nama_Role, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Nama_Role, new { htmlAttributes = new { @class = "form-control"} })
                                @Html.ValidationMessageFor(model => model.Nama_Role, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Deskripsi, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Deskripsi, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Deskripsi, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row row mb-0">
                            <div class="col-8 offset-4">
                                <button type="button" class="btn btn-primary waves-effect waves-light" onclick="btnSave(event, this, TableRole)">
                                    SIMPAN
                                </button>
                                <button type="button" class="btn btn-default waves-effect waves-light" data-dismiss="modal">KEMBALI</button>

                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </form>
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>
